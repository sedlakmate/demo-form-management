{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon --exec \"node -r esbuild-register ./src/index.ts\" -e .ts",
    "db:prepare": "echo 'Preparing database...' && yarn prisma:migrate:deploy && yarn prisma:generate && yarn prisma:seed && echo 'Database preparation finished.'",
    "build": "tsc",
    "start": "node -r esbuild-register ./src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.ts*\" --max-warnings 0",
    "type-check": "yarn tsc --noEmit",
    "test": "dotenv -e .env.test -- yarn test:prepare && dotenv -e .env.test -- jest --runInBand --coverage",
    "test:db:init": "yarn prisma:generate && yarn prisma:migrate --name test-init --skip-seed --preview-feature && yarn prisma:generate",
    "test:db:reset": "yarn prisma migrate reset --force --skip-seed --preview-feature",
    "test:prepare": "yarn test:db:init && yarn prisma:generate",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "prisma db seed"
  },
  "jest": {
    "preset": "@repo/jest-presets/dist",
    "setupFiles": [
      "<rootDir>/jest.setup.env.js"
    ]
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.52.0",
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.15.17",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.25.4",
    "esbuild-register": "^3.6.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "playwright": "^1.52.0",
    "prisma": "^6.8.2",
    "supertest": "^6.3.3",
    "typescript": "5.8.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "node prisma/seed.js"
  }
}
